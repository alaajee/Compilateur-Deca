{
    int x = 8;
    float y = 14.7;
    boolean isValid = false;
    boolean isReady = true;
    float result;

    if(x > 5 && (y < 20 || isValid > y)) {
        print("Les conditions sont remplies.");
    } else {
        print("Les conditions ne sont pas remplies.");
    }

    result = (x * y) + 10;
    if (result > 50) {
        print("Résultat supérieur à 50.");
    } else {
        print("Résultat inférieur ou égal à 50.");
    }

    if (isReady && result < 100) {
        print("Le système est prêt avec un résultat acceptable.");
    }
}
